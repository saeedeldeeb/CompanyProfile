<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#262626"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/_16sdp"
    android:layout_margin="@dimen/_8dp">

    <ImageView
        android:id="@+id/most_order_image"
        android:layout_width="@dimen/_64sdp"
        android:layout_height="@dimen/_64sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_room_service_24"
        android:tint="@color/red"/>

    <TextView
        android:id="@+id/most_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:text="TextView"
        android:textAlignment="center"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="@+id/most_order_image"
        app:layout_constraintStart_toStartOf="@+id/most_order_image"
        app:layout_constraintTop_toBottomOf="@+id/most_order_image" />

    <TextView
        android:id="@+id/most_order_desc"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:maxLines="2"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/most_order_title"
        app:layout_constraintStart_toStartOf="@+id/most_order_title"
        app:layout_constraintTop_toBottomOf="@+id/most_order_title" />
</androidx.constraintlayout.widget.ConstraintLayout>